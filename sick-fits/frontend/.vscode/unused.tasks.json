{
    "version": "2.0.0",
    "presentation": {
      "echo": false,
      "reveal": "always",
      "focus": false,
      "panel": "dedicated",
      "showReuseMessage": true
    },
    "tasks": [
      {
        "label": "Create terminals",
        "dependsOn": [
          "backend",
          "frontend"
        ],
        // Mark as the default build task so cmd/ctrl+shift+b will create them
        "group": {
          "kind": "build",
          "isDefault": true
        },
        // Try start the task on folder open
        "runOptions": {
          "runOn": "folderOpen"
        }
      },
      {
        // The name that shows up in terminal tab
        "label": "backend",
        // The task will launch a shell
        "type": "shell",
        "command": "cd sickfits/backend",
        // Set the shell type
        "options": {
          "shell": {
            "executable": "zsh",
            "args": []
          }
        },
        // Mark as a background task to avoid the spinner animation on the terminal tab
        "isBackground": true,
        "problemMatcher": [],
        // Create the tasks in a terminal group
        "presentation": {
          "group": "sick-fits"
        }
      },
      {
        "label": "frontend",
        "type": "shell",
        "command": "cd sickfits/frontend",
        "options": {
          "shell": {
            "executable": "zsh",
            "args": []
          }
        },
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "sick-fits",
        }
      }
    ]
  }